<!DOCTYPE html>
<html>

    <head>
        <title>Database Create Row</title>
        <link rel="stylesheet" type="text/css" href="css/bootstrap.min.css" />
    </head>

    <body>
        <div class="container-fluid vh-100" style="margin-top:10px">
            <div class="" style="margin-top:100px">
              <div class="rounded d-flex justify-content-center">
                <div class="col-md-4 col-sm-12 shadow-lg p-5 bg-light">
                  <div class="text-center">
                    <div style="text-align:center"><h3>Search Results for:</h3>
                    <p><%- locals.firstName %> <%- locals.lastName %></p>
                    <p><%- locals.email %></p>
                    </div>
                        <% if (searchResults.length) { %>
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th scope="col">Name</th>
                                        <th scope="col">Email</th>
                                        <th scope="col">Account Type</th>
                                        <th scope="col">View Account</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for (var i = 0; i < searchResults.length; i ++) { %>
                                            <td><%- locals.searchResults[i].name %></td>
                                            <td><%- locals.searchResults[i].email %></td>
                                            <td><%- locals.searchResults[i].account_type %></td>
                                            <form method="post" action="/account">
                                            <input type="hidden" id="email" name="email" value="<%- locals.searchResults[i].email %>">
                                            <td><button>View Account</button></td>
                                            </form>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                            <% } else { %>
                                <p class="text-center">No Results.</p>
                            <% } %>
                            <a href="/search"><button class="btn btn-primary mt-2" >Return to search</button></a>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>

</html>